# ============================================
# CONFIGURACIÓN AWS REKOGNITION
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# ============================================
# CONFIGURACIÓN RENIEC API (ACJ Solutions)
# ============================================
API_RENIEC_BASE_URL=https://api.acjdigital.com
API_RENIEC_CLIENT_ID=your_client_id_here
API_RENIEC_CLIENT_SECRET=your_client_secret_here
API_RENIEC_CHANNEL=API
API_RENIEC_MOCK_ENABLED=true

# ============================================
# CONFIGURACIÓN GOOGLE CLOUD
# ============================================
GOOGLE_CLOUD_PROJECT_ID=your_project_id_here
GOOGLE_CLOUD_LOCATION=us
GOOGLE_CLOUD_PROCESSOR_ID=your_processor_id_here

# IMPORTANTE: Rutas diferentes según el entorno
# Para ejecución local (mvn spring-boot:run):
# GOOGLE_APPLICATION_CREDENTIALS=./src/main/resources/google-credentials.json

# Para ejecución en Docker (docker-compose):
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/google-credentials.json

# NOTA: El archivo google-credentials.json se monta como volumen en docker-compose.yml
# Asegúrate de tener el archivo en la raíz del proyecto antes de ejecutar docker-compose

# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
SERVER_PORT=8081

# ============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================
FACE_COMPARISON_PROVIDER=reniec
AWS_SIMILARITY_THRESHOLD=70.0
APP_DNI_MODE=mock

# ============================================
# CONFIGURACIÓN JVM (DOCKER)
# ============================================
# Estas variables se usan en docker-compose.yml
# JAVA_OPTS=-Xmx1g -Xms512m


